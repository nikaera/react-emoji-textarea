{
  "name": "@nikaera/react-emoji-textarea",
  "version": "2.0.1",
  "description": "A modern React textarea component with emoji support.",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "lint": "prettier --check . && eslint . --ext .ts,.tsx",
    "fix": "prettier --write . && eslint . --ext .ts,.tsx --fix",
    "preview": "storybook dev -p 6006",
    "preview:build": "storybook build",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck"
  },
  "keywords": [
    "react",
    "emoji",
    "textarea",
    "component",
    "typescript",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nikaera/react-emoji-textarea.git"
  },
  "bugs": {
    "url": "https://github.com/nikaera/react-emoji-textarea/issues"
  },
  "author": "nikaera",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^15.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^9.1.1",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "storybook": "^9.1.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1"
  }
}
